<% if @post.errors.any? %>
  <section id="errors" >
    <h2> <%= pluralize(@post.errors.count, "error") %> prohibited this post from being made: </h2>
    <ul>
      <% @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </section>
<% end %>
<%= form_for @post, html: {multipart: true} do |f| %>
  <%= f.label :content %>
  <%= f.file_field :image %>
  <%= f.text_area :content %>
  <%= f.submit "Create Post", :class => "btn btn-info btn-xs"  %>
<% end %>
